<Window x:Class="TranHoaiKhoiWpf.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranHoaiKhoiWpf"
        mc:Ignorable="d"
        Title="Research Project Detail" Height="400" Width="700" Background="#FFF5F5DC" FontFamily="Tahoma" FontSize="12" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="DetailWindowModeLabel" Content="CREATE | UPDATE ResearchProject" HorizontalAlignment="Left" Height="58" Margin="141,10,0,0" VerticalAlignment="Top" Width="436" RenderTransformOrigin="0.462,0.632" FontSize="26"/>
        <Label Content="ID" HorizontalAlignment="Left" Height="28" Margin="61,81,0,0" VerticalAlignment="Top" Width="53" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" />
        <Label Content="Title" HorizontalAlignment="Left" Height="28" Margin="61,114,0,0" VerticalAlignment="Top" Width="53" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" />
        <Label Content="Field" HorizontalAlignment="Left" Height="28" Margin="61,147,0,0" VerticalAlignment="Top" Width="53" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" />
        <Label Content="StartDate" HorizontalAlignment="Left" Height="28" Margin="51,192,0,0" VerticalAlignment="Top" Width="64" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" RenderTransformOrigin="0.536,-0.022" />
        <Label Content="EndDate" HorizontalAlignment="Left" Height="28" Margin="56,229,0,0" VerticalAlignment="Top" Width="64" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" RenderTransformOrigin="0.5,1.401" />
        <Label Content="Budget" HorizontalAlignment="Left" Height="28" Margin="66,264,0,0" VerticalAlignment="Top" Width="54" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" />
        <Label Content="Researcher ID" HorizontalAlignment="Left" Height="28" Margin="27,310,0,0" VerticalAlignment="Top" Width="87" FontSize="12" FontFamily="Arial" Foreground="#FF6B705C" />
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="20" Margin="119,88,0,0" Background="#FFFFF8EB" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" Height="20" Margin="119,121,0,0" Background="#FFFFF8EB" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="FieldTextBox" HorizontalAlignment="Left" Height="20" Margin="119,154,0,0" Background="#FFFFF8EB" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="BudgetTextBox" HorizontalAlignment="Left" Height="20" Margin="120,271,0,0" Background="#FFFFF8EB" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="199"/>
        <ComboBox x:Name="ResearcherIdComboBox" HorizontalAlignment="Left" Height="20" Margin="120,317,0,0" Background="#FFFFF8EB" VerticalAlignment="Top" Width="199"/>
        <DatePicker x:Name="StartDatePicker" Margin="120,192,350,0" VerticalAlignment="Top" />
        <DatePicker x:Name="EndDatePicker" Margin="119,233,350,0" VerticalAlignment="Top" />
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="32" Margin="394,88,0,0" VerticalAlignment="Top" Width="89" Padding="5" Background="#FFB38B82" Foreground="#FFFFFFFF" Click="SaveButton_Click" />
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Height="32" Margin="394,133,0,0" VerticalAlignment="Top" Width="89" Padding="5" Background="#FFB38B82" Foreground="#FFFFFFFF" Click="CloseButton_Click" />


    </Grid>
</Window>
